{
  "extends": [
    "eslint:recommended",
    "eslint:all",
    "google",
    "plugin:@typescript-eslint/recommended" // Uses the recommended rules from the @typescript-eslint/eslint-plugin
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "binaryLiterals": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "experimentalObjectRestSpread": true,
      "forOf": true,
      "generators": true,
      "globalReturn": true,
      "impliedStrict": true,
      "jsx": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralDuplicateProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "octalLiterals": true,
      "regexUFlag": true,
      "regexYFlag": true,
      "restParams": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "unicodeCodePointEscapes": true,
    },
  },
  "rules": {
    "no-extra-semi": "error",
    "array-bracket-spacing": "error",
    "brace-style": "error",
    "array-bracket-newline": "error",
    "array-element-newline": "error",
    "arrow-spacing": "error",
    "camelcase": "error",
    "comma-dangle": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "no-trailing-spaces": "error",
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      },
    ],
  }
}